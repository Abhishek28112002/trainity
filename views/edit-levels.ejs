  <body class="application application-offset"style="margin-left:300px;width: calc(100vw - 300px);padding:0 32px;background:white" id="MainPageContent">
    <div
      class="modal fade fixed-right"
      id="modal-products"
      tabindex="-1"
      role="dialog"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-vertical" role="document">
        <div class="modal-content">
          <div class="scrollbar-inner">
            <div class="modal-body"></div>
          </div>
        </div>
      </div>
    </div>
    <!-- Application container -->
    <div style="margin-left:300px;width: calc(100vw - 300px);padding:0 32px;" id="MainPageContent">
      <!-- Sidenav -->
      <%- include('partials/sidepanel'); -%>
      <!-- Content -->
      <div class="main-content footer-margin-mobile position-relative">
      

        <!-- Page content -->
        <div class="page-content">
          <div class="row justify-content-center">
            <div class="col-lg-8">
              <!-- Page title -->
              <div class="page-title" >
                <div class="row justify-content-between align-items-center">
                  <div
                    class="col-md-6 d-flex align-items-center justify-content-between justify-content-md-start mb-3 mb-md-0"
                  >
                    <!-- Page title + Go Back button -->
                    <div class="d-inline-block">
                      <h5
                        class="h4 d-inline-block font-weight-400 mb-0 text-black"
                      >
                        Edit Levels - <%= employee.firstName + ' ' + employee.lastName %>
                      </h5>
                    </div>
                    <!-- Additional info -->
                  </div>
                </div>
              </div>
              <%- include('partials/utility-modals'); -%>
              <div class="card mt-4">
                <div class="card-body">
                  <div class="form-group">
                    <div
                      style="
                        display: grid;
                        grid-template-columns: 1fr auto;
                        margin-bottom: 1rem;
                      "
                    >
                      <h5>Levels</h5>
                      <a
                        type="button"
                        class="btn btn-primary"
                        href="/create/level"
                      >
                        Add Level
                      </a>
                    </div>
                    <div id="levelList">
                      <div class="level level-div">
                        <% for(let i=0; i<levelList.length; i++) { %>
                          <div>
                              <input
                                type="number"
                                id="levelbadges<%=i%>"
                                class="form-control level-badges"
                                value="<%= levelList[i].badges %>"
                                style="margin-bottom: 1rem"
                                placeholder="Badges Required"
                              />
                              <input
                                type="text"
                                id="leveltitle<%=i%>"
                                value="<%= levelList[i].title %>"
                                class="form-control level-title"
                                style="margin-bottom: 1rem"
                                placeholder="Level Title"
                              />
                              <textarea
                                value=""
                                id="leveldescription<%=i%>"
                                class="form-control level-description"
                                name="description"
                                placeholder="Enter Level description"
                                rows="3"
                                resize="none"
                              ><%= levelList[i].description %></textarea>
                            </div>
                            <div style="display: flex;align-items: center;flex-direction:column;gap:20px">
                              <button
                                type="button"
                                class="btn btn-danger"
                                onclick="removeLevel(`<%= levelList[i]._id %>`)"
                                style="width:120px"
                              >
                                Remove
                              </button>
                              <button
                                type="button"
                                class="btn btn-success"
                                onclick="saveLevel('<%=i%>',`<%= levelList[i]._id %>`)"
                                style="width:120px"
                              >
                                Save
                              </button>
                            </div>
                        <% } %>
                        
                      </div>
                    </div>
                  </div>

                  
                </div>
              </div>
            </div>
          </div>
        </div>
       
      </div>
    </div>
    <!-- Scripts -->
    <!-- Core JS - includes jquery, bootstrap, popper, in-view and sticky-kit -->
    <script src="../../js/purpose.core.js"></script>
    <!-- Page JS -->
    <script src="../../libs/dropzone/dist/min/dropzone.min.js"></script>
    <script src="../../libs/bootstrap-tagsinput/dist/bootstrap-tagsinput.min.js"></script>
