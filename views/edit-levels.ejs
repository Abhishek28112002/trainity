    <script src="../../js/demo.js"></script>

    <script>
          async function removeLevel(id) {
        $('#loadingModal').modal('show');
        try {
            const response = await fetch("/delete/level", {
            method: "DELETE",

            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              levelID: id
            }),
          });
          const data = await response.json();
          $("#loadingModal").modal("hide");
            $("#errorModal").modal("hide");
            $("#successModal").modal("show");
        } catch (error) {
            console.log(error);
            $("#loadingModal").modal("hide");
            $("#errorModal").modal("show");
            $("#successModal").modal("hide");
            
        }
      }
      async function saveLevel(index,id) {
        $('#loadingModal').modal('show');
     
        const title=document.getElementById(`leveltitle${index}`).value;
        const badges=document.getElementById(`levelbadges${index}`).value;
        const description=document.getElementById(`leveldescription${index}`).value;
       
        try {
            const response = await fetch(`/editlevel/${id}`, {
            method: "PUT",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
             title,description,badges
            }),
          });
          const data = await response.json();
          $("#loadingModal").modal("hide");
            $("#errorModal").modal("hide");
            $("#successModal").modal("show");
        } catch (error) {
            console.log(error);
            $("#loadingModal").modal("hide");
            $("#errorModal").modal("show");
            $("#successModal").modal("hide");
            
        }
      }
    </script>

    
  </body>
</html>
