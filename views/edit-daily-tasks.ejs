    <script src="//cdn.quilljs.com/1.3.6/quill.js"></script>
    <script src="../../libs/select2/dist/js/select2.min.js"></script>
    <script src="../../libs/flatpickr/dist/flatpickr.min.js"></script>
    <!-- Purpose JS -->
    <script src="../../js/purpose.js"></script>
    <!-- Demo JS - remove it when starting your project -->
    <script src="../../js/demo.js"></script>

    <script>
          async function removeTask(id) {
        $('#loadingModal').modal('show');
        try {
            const response = await fetch("/delete/dailyTask", {
            method: "DELETE",

            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              dailyTaskID: id
            }),
          });
          const data = await response.json();
          $("#loadingModal").modal("hide");
            $("#errorModal").modal("hide");
            $("#successModal").modal("show");
        } catch (error) {
            console.log(error);
            $("#loadingModal").modal("hide");
            $("#errorModal").modal("show");
            $("#successModal").modal("hide");
            
        }



      }
      async function saveTask(index,id) {
        try {
        $('#loadingModal').modal('show');
        const taskId=document.getElementById(`taskid${index}`).value
        const description=document.getElementById(`taskdescription${index}`).value
        const taskDeadlineTime=document.getElementById(`task-deadlineTime${index}`).value;
          const taskDeadlineDay=parseInt(document.getElementById(`task-deadlineDay${index}`).value);
        
          let deadline=(taskDeadlineDay*24*60 + parseInt(taskDeadlineTime.split(':')[0])*60 + parseInt(taskDeadlineTime.split(':')[1]))*60*1000 ;
 
       
            const response = await fetch(`/editdailytask/${id}`, {
            method: "PUT",

            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              description,taskId,deadline
            }),
          });
          const data = await response.json();
          $("#loadingModal").modal("hide");
            $("#errorModal").modal("hide");
            $("#successModal").modal("show");
        } catch (error) {
            console.log(error);
            $("#loadingModal").modal("hide");
            $("#errorModal").modal("show");
            $("#successModal").modal("hide");
            
        }



      }
    </script>

    
  </body>
</html>
