  <body class="application application-offset" style="margin-left:300px;width: calc(100vw - 300px);padding:0 32px;background-color: white;" id="MainPageContent">
    <div
      class="modal fade fixed-right"
      id="modal-products"
      tabindex="-1"
      role="dialog"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-vertical" role="document">
        <div class="modal-content">
          <div class="scrollbar-inner">
            <div class="modal-body"></div>
          </div>
        </div>
      </div>
    </div>
    <!-- Application container -->
    <div >
      <!-- Sidenav -->
      <%- include('partials/sidepanel'); -%>
      <!-- Content -->
      <div class="main-content footer-margin-mobile position-relative">
        
        <div class="page-content">
          <div class="row justify-content-center">
            <div class="col-lg-8">
              <!-- Page title -->
              <div class="page-title">
                <div class="row justify-content-between align-items-center">
                  <div
                    class="d-flex align-items-center justify-content-between justify-content-md-start mb-3 mb-md-0"
                  >
                    <!-- Page title + Go Back button -->
                    <div class="d-inline-block">
                      <h5
                        class="h4 d-inline-block font-weight-400 mb-0 text-black"
                      >
                        Edit Daily Tasks - <%= employee.firstName + ' ' + employee.lastName %>
                      </h5>
                    </div>
                    <!-- Additional info -->
                  </div>
                </div>
              </div>
              <%- include('partials/utility-modals'); -%>
              <div class="card mt-4">
                <div class="card-body">
                  <div class="form-group">
                    <div
                      style="
                        display: grid;
                        grid-template-columns: 1fr auto;
                        margin-bottom: 1rem;
                      "
                    >
                      <h5>Daily Tasks</h5>
                      <a
                        type="button"
                        class="btn btn-primary"
                        href="/create/dailyTask"
                      >
                        Add Daily Task
                      </a>
                    </div>
                    <div id="taskList">
                      <div class="task task-div">
                        <% for(let i=0; i<dailyTaskList.length; i++) { %>
                          <div>
                            <input
                            type="text"
                            value="<%= dailyTaskList[i].taskID %>"
                            id="taskid<%=i%>"
                            class="form-control task-id"
                            style="margin-bottom: 1rem"
                            placeholder="Enter Task ID"
                          />
                          <textarea
                            class="form-control task-description"
                            placeholder="Enter Task Description"
                            rows="2"
                            id="taskdescription<%=i%>"
                            resize="none"
                          ><%= dailyTaskList[i].description %></textarea>
                        
                        <% let time= (dailyTaskList[i].deadline/(60*1000)) %(24*60)  %>
                     
                         <% let   hour = Math.floor(time/60 )%>
                        
                        <%  hour = (hour < 10 ? "0" : "") + hour;%>
                        <% time=time%60 %>
                       
  <%let  min=time %>
                         <% min = (min < 10 ? "0" : "") + min;%>
                           <% let   displayTime = hour + ":" + min; %>
                          
                          <div style="display:flex;gap:40px;align-items:center;margin-top:1rem"  class="form-control">
                            <input type="time"  name="appt"  style="border:none;padding:10px" id="task-deadlineTime<%=i%>" value='<%=displayTime%>'>
                              <select  name="day" style="border:none;padding:10px" id="task-deadlineDay<%=i%>">
                                <% if(dailyTaskList[i].deadline<84000000) {%>
                                <option value="0" selected>Current Day</option>
                                <option value="1">Next Day</option>
                                <% } else { %>
                                  <option value="0" >Current Day</option>
                                  <option value="1" selected>Next Day</option>
                                  <%}%>
                              </select>
                                                      </div>
                            </div>
                            <div style="display: flex;align-items: center;flex-direction:column;gap:20px">
                              <button
                                type="button"
                                class="btn btn-danger"
                                style="width:120px"
                                onclick="removeTask(`<%= dailyTaskList[i]._id %>`)"
                              >
                                Remove
                              </button>
                              <button
                              type="button"
                              class="btn btn-success"
                              onclick="saveTask('<%=i%>',`<%= dailyTaskList[i]._id %>`)"
                              style="width:120px"
                            >
                              Save
                            </button>
                            </div>
                        <% } %>
                        
                      </div>
                    </div>
                  </div>

                 
                </div>
              </div>
            </div>
          </div>
        </div>
      
      </div>
    </div>
    <!-- Scripts -->
    <!-- Core JS - includes jquery, bootstrap, popper, in-view and sticky-kit -->
    <script src="../../js/purpose.core.js"></script>
    <!-- Page JS -->
    <script src="../../libs/dropzone/dist/min/dropzone.min.js"></script>
    <script src="../../libs/bootstrap-tagsinput/dist/bootstrap-tagsinput.min.js"></script>
