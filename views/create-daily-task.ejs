    <script>
        function addTask() {
          var taskList = document.getElementById("taskList");
          var taskInput = document.createElement("div");
          taskInput.classList.add("task");
          taskInput.classList.add("task-div");
          taskInput.innerHTML = `
                             <div>
                              <input
                                type="text"
                                class="form-control task-id"
                                style="margin-bottom: 1rem"
                                placeholder="Enter Task ID"
                              />
                              <textarea
                                class="form-control task-description"
                                placeholder="Enter Task Description"
                                rows="2"
                                resize="none"
                              ></textarea>
                              <div style="display:flex;gap:40px;align-items:center;margin-top:1rem"  class="form-control">
                                <input type="time" id="appt" name="appt"  style="border:none;padding:10px" class="task-deadlineTime">
                                  <select id="day" name="day" style="border:none;padding:10px" class="task-deadlineDay">
                                    <option value="0">Current Day</option>
                                    <option value="1">Next Day</option>
                                  </select>
                                                          </div>
                            <div style="align-items: center">
                              <button
                                type="button"
                                class="btn btn-danger"
                                onclick="removeTask(this)"
                              >
                                Remove
                              </button>
                            </div>
                            
                          
            `;
          taskList.appendChild(taskInput);
        }
         
        function removeTask(button) {
          const element = button.parentNode.previousElementSibling;
          const parent = button.parentNode;
          element.remove();
          parent.remove();
        }
      </script>

    <script>
      const form = document.querySelector("form");
     async function getTask(employeeId)
      {
        try{
        let response=await fetch('/edit/dailyTask/'+employeeId,{
          method:'GET',
          headers:{
            'Content-Type':'application/json'
          }
        })
        let data=await response.json();
      }
      catch(error)
      {
        console.log(error);
      }
      }
      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        const employeeID = form.employeeID.value;
        const taskDivs = document.querySelectorAll(".task");
        const tasks = [];

        for (let i = 0; i < taskDivs.length; i++) {
          const taskID = taskDivs[i].querySelector("input").value;
          const taskDescription = taskDivs[i].querySelector("textarea").value;
          const taskDeadlineTime=taskDivs[i].querySelector(".task-deadlineTime").value;
          const taskDeadlineDay=parseInt(taskDivs[i].querySelector(".task-deadlineDay").value);
         
          let deadline=(taskDeadlineDay*24*60+ parseInt(taskDeadlineTime.split(':')[0])*60 + parseInt(taskDeadlineTime.split(':')[1]))*60*1000 ;
         
          if (taskDescription.length > 0)
            tasks.push({
              taskID: taskID,
              description: taskDescription,
              deadline:deadline,
            });
        }
        
        try {
          const response = await fetch("/create/dailyTask", {
            method: "POST",
            
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify({
                employeeID,
                tasks,
            }),
          });
          if (response.status === 200) {
            $("#loadingModal").modal("hide");
            $("#errorModal").modal("hide");
            $("#successModal").modal("show");
           
          } else {
            $("#loadingModal").modal("hide");
            $("#errorModal").modal("show");
            $("#successModal").modal("hide");
          }
        } catch (error) {
          $("#loadingModal").modal("hide");
          $("#errorModal").modal("show");
          $("#successModal").modal("hide");
          console.log(error);
        }
      });
    </script>
