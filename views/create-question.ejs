    <script>
      function addOption() {
        var optionList = document.getElementById("optionList");
        var optionInput = document.createElement("div");
        optionInput.classList.add("option");
        optionInput.classList.add("option-div");
        optionInput.innerHTML = `
          
                        <div>
                            <textarea
                              class="form-control option-description"
                              placeholder="Enter Option"
                              rows="2"
                              resize="none"
                            ></textarea>
                          </div>
                          <div style="align-items: center">
                            <button
                              type="button"
                              class="btn btn-danger"
                              onclick="removeOption(this)"
                            >
                              Remove
                            </button>
                          </div>
                          
            `;
        optionList.appendChild(optionInput);
      }

      function removeOption(button) {
        const element = button.parentNode.previousElementSibling;
        const parent = button.parentNode;
        element.remove();
        parent.remove();
      }
    </script>

    <script>
      const form = document.querySelector("form");

      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        const quizID = form.quizID.value;
        const questionID = form.questionID.value;
        const estimatedTime = form.estimatedTime.value;
        const question = form.question.value;
        const questionImageFile =
          document.querySelector("#question-image").files[0];
        const questionImageFileName = questionImageFile.name;
        const questionImageContentType = questionImageFile.type;
        const uploadType = "learning";

        const optionDivs = document.querySelectorAll(".option");
        const options = [];

        for (let i = 0; i < optionDivs.length; i++) {
          const value = optionDivs[i].querySelector("textarea").value;
          if (value.length > 0)
            options.push({
              value,
            });
        }

        console.log(options);

        $("#loadingModal").modal("show");
        $("#errorModal").modal("hide");
        $("#successModal").modal("hide");

        const urlRes = await fetch(
          `/aws/get/preSignedUrl?fileName=${questionImageFileName}t&contentType=${questionImageContentType}&uploadType=${uploadType}`,
          {
            method: "GET",
          }
        );
        const urlData = await urlRes.json();
        console.log(urlData);

        try {
          const response = await fetch(urlData.url, {
            method: "PUT",
            headers: {
              "Content-Type": questionImageContentType,
            },
            body: questionImageFile,
          });
          if (response.status === 200 && response.url) {
            const res = await fetch("/learning/create/question", {
              method: "POST",
              body: JSON.stringify({
                quizID,
                questionID,
                question,
                estimatedTime,
                options,
                questionImage: `https://dvfkpf9qxfl09.cloudfront.net/${urlData.key}`,
              }),
              headers: { "Content-Type": "application/json" },
            });

            const data = await res.json();

            if (data._id) {
              $("#loadingModal").modal("hide");
              $("#errorModal").modal("hide");
              $("#successModal").modal("show");
            }
          } else {
            $("#loadingModal").modal("hide");
            $("#errorModal").modal("show");
            $("#successModal").modal("hide");
          }
        } catch (error) {
          $("#loadingModal").modal("hide");
          $("#errorModal").modal("show");
          $("#successModal").modal("hide");
          console.log(error);
        }
      });
    </script>
